<link rel="stylesheet" href="app/styles/app.css" media="screen">

<h2 class="title">Markdown Editor</h2>

<section class="markdown">
    <h3>Markdown</h3>
  <div>
    {{textarea type="text" value=markdown cols="100" row="100" placeholder="Type here"}}
  </div>
</section>

<section class="notes">
  <h3>Notes</h3>
  <div>
    {{showdown-addon markdown}}
  </div>
</section>
